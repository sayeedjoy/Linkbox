{
  "manifest_version": 3,
  "name": "LinkBox",
  "version": "1.0.0",
  "description": "Save bookmarks to LinkBox from your browser",
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["<all_urls>", "http://localhost:*/*", "https://*/*"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Save to LinkBox"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": { "default": "Ctrl+Shift+B", "mac": "Command+Shift+B" },
      "description": "Open save bookmark popup"
    }
  }
}
