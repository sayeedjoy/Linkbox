{
  "manifest_version": 3,
  "name": "LinkBox",
  "version": "1.0.0",
  "description": "Save bookmarks to LinkBox from your browser",
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["<all_urls>", "http://localhost:*/*", "https://*/*"],
  "icons": {
    "16": "icons/bookmark-16.png",
    "48": "icons/bookmark-48.png",
    "128": "icons/bookmark-128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Save to LinkBox",
    "default_icon": {
      "16": "icons/bookmark-16.png",
      "48": "icons/bookmark-48.png",
      "128": "icons/bookmark-128.png"
    }
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+B",
        "mac": "Command+Shift+B"
      },
      "description": "Open save bookmark popup"
    }
  }
}
